mixin icon(name,width)
	svg(class="Icon")&attributes(attributes)
		use(href="#icon-" + name)

mixin picture(name,ext,x2)
	- let alt = attributes.alt
	- let src = attributes.src
	- delete attributes.alt
	- delete attributes.src
	if !x2
		picture&attributes(attributes)
			source(srcset="media/" + src + ".webp" type="image/webp")
			img(src="media/" + src + "." + ext alt=alt)
	else
		picture&attributes(attributes)
			source(srcset="media/" + src + ".webp, media/" + src + "@2x.webp 2x" type="image/webp")
			img(src="media/" + src + "." + ext srcset="media/" + src + "." + ext + ", media/" + src + "@2x." + ext + " 2x" alt=alt)
