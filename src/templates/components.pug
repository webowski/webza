extends base/layout.pug

block variables
	- var title = 'Components'
	- var currentUrl = '/components.html'

block main
	link(rel='stylesheet' href=require('~/../node_modules/prismjs/themes/prism.css'))

	<div class="Section">
		<div class="container">

			<h1>#{title}</h1>

			<h3>Button</h3>

			<div class="flex gap-4  flex-col items-stretch">
				<div class="grid grid-cols-2 items-start gap-6">
					<div class="">
						:markdown
							```html
							<button class="Button">Button</button>
							```
					</div>
					<div class="">
						<button class="Button">Button</button>
					</div>
				</div>

				<div class="grid grid-cols-2 items-start gap-6">
					<div class="">
						:markdown
							```html
							<button class="Button -primary">Button</button>
							```
					</div>
					<div class="">
						<button class="Button -primary">Button</button>
					</div>
				</div>

				<div class="grid grid-cols-2 items-start gap-6">
					<div class="">
						:markdown
							```html
							<button class="Button -lg -primary">Button</button>
							```
					</div>
					<div class="">
						<button class="Button -lg -primary">Button</button>
					</div>
				</div>

				<div class="grid grid-cols-2 items-start gap-6">
					<div class="">
						:markdown
							```html
							<button class="Button -sm -primary">Button</button>
							```
					</div>
					<div class="">
						<button class="Button -sm -primary">Button</button>
					</div>
				</div>
			</div>

			<hr>

			<h3>Picture</h3>
			+picture(src="media/hero@2x.jpg" alt="Alt text").Picture

			<h3>Notifications</h3>
			+notifications
				p notification

			<h3>Icon</h3>
			+icon("search")

			<h3>Tabs</h3>
			+tabs

		</div>
	</div>
