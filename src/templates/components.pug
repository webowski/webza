extends base/layout.pug

block variables
	- var title = 'Components'
	- var currentUrl = '/components.html'

block main
	<div class="Section">
		<div class="container">

			<h1>#{title}</h1>

			<h3>Button</h3>
			<button class="Button">.Button</button>
			<button class="Button -primary">.Button</button>

			<hr>

			<h3>Picture</h3>
			+picture(src="media/hero@2x.jpg" alt="Alt text").Picture

			<h3>Notifications</h3>
			+notifications
				p notification

			<h3>Icon</h3>
			+icon("search")

			<h3>Tabs</h3>
			+tabs

		</div>
	</div>
